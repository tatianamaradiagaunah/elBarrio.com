<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.4.1/css/all.css" integrity="sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz" crossorigin="anonymous">
    <link rel="shortcut icon" href="../public/img/icon_bus.ico" type="image/x-icon">
    <link rel="stylesheet" href="../public/css/dashboard.css">
    <link href="css/normalize-card.min.css" type="text/css" rel="stylesheet">
    <link href="css/principal2.css" rel="stylesheet">
    <link href="css/estilos.css" rel="stylesheet">

    <title>elBarrio</title>
</head>

<body>

    <!-- Navigation -->
    <nav class="navbar navbar-expand-md encabezado navbar-light bg-dark sticky-top">
        <div class="container-fluid">
            <a href="#" class="navbar-brand text1">
                <strong>elBarrio</strong>

            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive">
          <span class="navbar-toggler-icon"></span>
        </button>
            <div class="collapse navbar-collapse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <form class="form-inline">
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="basic-addon1"><i class="fas fa-search"></i></span>
                                </div>
                                <input type="text" class="form-control" placeholder="Buscar" aria-label="Username" aria-describedby="basic-addon1">
                            </div>
                        </form>
                    </li>
                    <li class="nav-item active">
                        <a href="#" class="nav-link text-white">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-white">Perfil</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-white">Soporte</a>
                    </li>
                    <li class="nav-item">
                        <a href="#" class="nav-link text-white">Ayuda</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- dashboard -->
    <div class="container-fluid">
        <div class="row">
            <nav class="col-xs-12 col-sm-12 col-md-2 col-lg-3 col-xl-3 bg-secondary p-1 border-right">
                <div class="sidebar-sticky">
                    <ul class="nav flex-column">
                        <li class="nav-item active">
                            <a href="/dashboard/<%= conductores[0].cod_empresa %>" class="nav-link text-light">
                                <i class="fas fa-building"></i> Perfil del Negocio
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/profile/<%= conductores[0].cod_empresa %>" class="nav-link text-light">
                                <i class="fas fa-user"></i> Perfil de usuario
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/empleados" class="nav-link text-light">
                                <i class="fas fa-user"></i> Perfil de Emprendedores
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-light">
                                <i class="fas fa-chalkboard-teacher"></i> Reclamar sitio web
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-light">
                                <i class="fas fa-cogs"></i> Configuracion
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/travel/<%= conductores[0].cod_empresa %>" class="nav-link text-light">
                                <i class="fas fa-shopping-cart"></i> Comprar
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="#" class="nav-link text-light">
                                <i class="fas fa-money-check"></i> Estado de cuenta
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
            <main class="col-xs-12 col-sm-12 col-md-10 col-lg-9 col-xl-9 bg-light mh-100 p-5">
                <div class="row mt-3">
                    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-xl-4">
                        <input type="text" id="myInput" onkeyup="buscar()" placeholder="busca por empresa..">
                    </div>
                    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <table id="tabla" class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Perfil</th>
                                    <th scope="col">Nombre</th>
                                    <th scope="col">Apellido</th>
                                    <th scope="col">Edad</th>
                                    <th scope="col">Experiencia</th>
                                    <th scope="col">Nombre Negocio</th>
                                </tr>
                            </thead>
                            <tbody id="cuerpo">
                                <% for(var i=0; i<conductores.length; i++) { %>
                                    <tr>
                                        <td><img src="../public/img/<%= conductores[i].cod_persona %>.png" height="100px" width="100px"></td>
                                        <td>
                                            <%= conductores[i].nombre_persona %>
                                        </td>
                                        <td>
                                            <%= conductores[i].apellido_persona %>
                                        </td>
                                        <td>
                                            <%= conductores[i].edad %>
                                        </td>
                                        <td>
                                            <%= conductores[i].experiencia %>
                                        </td>
                                        <td>
                                            <%= conductores[i].nombre_empresa %>
                                                <input type="hidden" id=" conductor" name=" " value="<%= user.id %>">

                                        </td>
                                    </tr>

                                    <% } %>
                            </tbody>
                        </table>

                    </div>
                </div>
        </div>
    </div>
    </div>
    </main>
    </div>
    </div>



    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="../public/js/jquery.min.js"></script>
    <script src="../public/js/bootstrap.bundle.min.js"></script>
    <script type="text/javascript" src="js/bootstrap.min.js"></script>
    <script src="../public/js/controlador.js"></script>
    <script>
        function buscar() {
            // Declare variables 
            var input, filter, table, tr, td, i, r, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("tabla");
            tr = table.getElementsByTagName("tr");

            for (i = 0; i < tr.length; i++) {
                td = tr[i].getElementsByTagName("td")[5];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }
            }
        }
    </script>
</body>

</html>